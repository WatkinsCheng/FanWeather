<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.zhao.fanweather.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_city"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="请输入查询城市"/>
        <Button
            android:id="@+id/bt_inquiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查询"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:id="@+id/tv_now_0"
            android:textSize="90sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日天气"
            android:id="@+id/tv_note_0"
            android:textColor="#55000000"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_feng"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/linearLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="℃"
            android:textSize="50sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_now_0"
            android:paddingTop="10dp"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10℃"
            android:id="@+id/tv_max_0"
            android:layout_below="@+id/tv_now_0"
            android:layout_toStartOf="@+id/textView8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~"
            android:id="@+id/textView8"
            android:layout_above="@+id/tv_note_0"
            android:layout_alignEnd="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25℃"
            android:id="@+id/tv_min_0"
            android:layout_above="@+id/tv_note_0"
            android:layout_toEndOf="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多云转晴"
            android:id="@+id/tv_type_0"
            android:layout_below="@+id/tv_now_0"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CITY"
            android:textSize="30sp"
            android:id="@+id/tv_city"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_city"
            android:id="@+id/linearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AQI: "
                android:id="@+id/textView"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:id="@+id/tv_aqi"
                 />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南风"
            android:id="@+id/tv_feng"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/tv_type_0"
            android:layout_toEndOf="@+id/tv_type_0" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明天"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:id="@+id/textView4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUN"
                android:id="@+id/tv_type_1"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView4"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="63dp"
                android:text="max"
                android:id="@+id/tv_max_1"
                android:textSize="15sp"
                android:layout_below="@+id/tv_type_1"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/imageView"
                android:src="@drawable/img"
                android:layout_below="@id/tv_max_1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min"
                android:textSize="15sp"
                android:id="@+id/tv_min_1"
                android:layout_below="@+id/imageView"
                android:layout_alignStart="@+id/tv_max_1" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明天"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:id="@+id/tv_date2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUN"
                android:id="@+id/tv_type_2"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tv_date2"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="63dp"
                android:text="max"
                android:id="@+id/tv_max_2"
                android:textSize="15sp"
                android:layout_below="@+id/tv_type_2"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/imageView2"
                android:src="@drawable/img"
                android:layout_below="@id/tv_max_2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min"
                android:textSize="15sp"
                android:id="@+id/tv_min_2"
                android:layout_below="@+id/imageView2"
                android:layout_alignStart="@+id/tv_max_2" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明天"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:id="@+id/tv_date3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUN"
                android:id="@+id/tv_type_3"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tv_date3"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="63dp"
                android:text="max"
                android:id="@+id/tv_max_3"
                android:textSize="15sp"
                android:layout_below="@+id/tv_type_3"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/imageView3"
                android:src="@drawable/img"
                android:layout_below="@id/tv_max_3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min"
                android:textSize="15sp"
                android:id="@+id/tv_min_3"
                android:layout_below="@+id/imageView3"
                android:layout_alignStart="@+id/tv_max_3" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明天"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:id="@+id/tv_date4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUN"
                android:id="@+id/tv_type_4"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tv_date4"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="63dp"
                android:text="max"
                android:id="@+id/tv_max_4"
                android:textSize="15sp"
                android:layout_below="@+id/tv_type_4"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/imageView4"
                android:src="@drawable/img"
                android:layout_below="@id/tv_max_4"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min"
                android:textSize="15sp"
                android:id="@+id/tv_min_4"
                android:layout_below="@+id/imageView4"
                android:layout_alignStart="@+id/tv_max_4" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
